{
  "name": "@teamsnap/teamsnap-ui",
  "version": "2.0.0",
  "description": "a CSS component library for TeamSnap",
  "main": "dist/js/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:js": "eslint src/js/ || true",
    "lint:css": "sass-lint 'src/css/**/*.scss' -v -q || true",
    "lint": "npm run lint:css && npm run lint:js",
    "prepublish": "npm run lint",
    "postinstall": "npm run build",
    "start": "gulp --gulpfile ./scripts/gulpfile.js",
    "build": "npm run build:css && npm run build:icons && npm run build:js",
    "build:css": "gulp build --gulpfile ./scripts/gulpfile.js",
    "build:icons": "NODE_ENV=production babel-node ./scripts/buildIcons.js",
    "build:js": "babel src/js -d dist/js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teamsnap/teamsnap-ui.git"
  },
  "author": "TeamSnap Developers <oss@teamsnap.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/teamsnap/teamsnap-ui/issues"
  },
  "homepage": "https://github.com/teamsnap/teamsnap-ui#readme",
  "keywords": [
    "css",
    "sass",
    "suit"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "browser-sync": "^2.23.6",
    "del": "^3.0.0",
    "eslint": "^4.18.2",
    "eslint-plugin-react": "^7.7.0",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.1.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-if": "^2.0.2",
    "gulp-sass": "^3.1.0",
    "gulp-util": "^3.0.8",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "sass-lint": "^1.10.2",
    "svgo": "^1.0.5"
  }
}
