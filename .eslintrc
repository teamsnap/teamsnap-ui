{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "eol-last": 2,
    "no-multiple-empty-lines": [2, { "max": 5, "maxEOF": 0 }],
    "max-len": [
      2,
      {
        "code": 120, 
        "ignoreComments": true, 
        "ignoreTrailingComments": true, 
        "ignoreUrls": true, 
        "ignoreStrings": true, 
        "ignoreTemplateLiterals": true, 
        "ignoreRegExpLiterals": true
      }
    ]
  }
}
